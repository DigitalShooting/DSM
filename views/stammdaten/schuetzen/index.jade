extends ../index.jade

block title
	| Schützen

block main
	h1
		block title
		
	ul(class="nav nav-tabs")
		li(class="active")
			a
				span(class="glyphicon glyphicon glyphicon-eye-open" aria-hidden="true")
				|  Übersicht
		
	table(class="table table-hover table-striped")
		tr
			th Vorname
			th Name
			th Passnummer
			th Bearbeiten
		tr
			td(colspan="3")
				input(type="text" class="form-control" placeholder="Suchen" style="width:100%;")
			td
				a(href="./edit/new" class="btn btn-success")
					span(class="glyphicon glyphicon-plus" aria-hidden="true")
					|  Neu
		- schuetzen.forEach(function(schuetze){
			tr
				td #{schuetze.firstName}
				td #{schuetze.lastName}
				td #{schuetze.passnummer}
				td
					a(href="./edit/#{schuetze._id}") Bearbeiten
		- })
