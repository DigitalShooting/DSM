extends ../index.jade

block title
	| Schützen

block main
	h1
		block title
		
	ul(class="nav nav-tabs")
		li(class="active")
			a
				span(class="glyphicon glyphicon glyphicon-eye-open" aria-hidden="true")
				|  Übersicht
		
	table(class="table table-hover table-striped")
		tr
			th Vorname
			th Name
			th Passnummer
			th Verein
			th(class="sizeCoulumToFit")
				span(class="glyphicon glyphicon glyphicon-cog" aria-hidden="true")
				|  Bearbeiten
			th(class="sizeCoulumToFit")
				span(class="glyphicon glyphicon glyphicon-trash" aria-hidden="true")
				|  Löschen
		tr
			td(colspan="4")
				input(type="text" class="form-control" placeholder="Suchen" style="width:100%;")
			td(colspan="2")
				a(href="./edit/new" class="btn btn-primary fullWidth")
					span(class="glyphicon glyphicon-plus" aria-hidden="true")
					|  Neu
		- schuetzen.forEach(function(schuetze){
			tr
				td #{schuetze.firstName}
				td #{schuetze.lastName}
				td #{schuetze.passnummer}
				td #{schuetze.verein}
				td(class="sizeCoulumToFit")
					a(href="./edit/#{schuetze.id}")
						span(class="glyphicon glyphicon glyphicon-cog" aria-hidden="true")
						|  Bearbeiten
				td(class="sizeCoulumToFit")
					a(href="./delete/#{schuetze.id}")
						span(class="glyphicon glyphicon glyphicon-trash" aria-hidden="true")
						|  Löschen
		- })
