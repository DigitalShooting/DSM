extends index.jade

block title
	| #{schuetze.vorname} #{schuetze.name}
	
block main
	h1
		block title
	div(class="panel panel-primary")
		div(class="panel-heading") Infos
		div(class="panel-body")
			form(role='form' method="post" class="form-horizontal")
				+inputDefault("firstName", schuetze ? schuetze.firstName : "", "Vorname")
				+inputDefault("lastName", schuetze ? schuetze.lastName : "", "Name")
				+inputDefault("passnummer", schuetze ? schuetze.passnummer : "", "Passnummer")
				
				- var optionVerein = []
				- vereine.forEach(function(verein){ optionVerein.push({id: verein._id, title: verein.name}) })
				+inputSelect("vereinID", optionVerein, schuetze ? schuetze.vereinID : "", "Verein")
				
				+inputDisabled(schuetze ? schuetze._id : "", "ID")
				
				input(type="submit" class="btn btn-primary pull-right")
