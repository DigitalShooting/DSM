extends index.jade

block title
	| #{verein.name}
	
block main
	h1 #{verein.name}
	
	ul(class="nav nav-tabs")
		li(class="")
			a(href="../")
				span(class="glyphicon glyphicon glyphicon-eye-open" aria-hidden="true")
				|  Übersicht
		li(class="active")
			a
				span(class="glyphicon glyphicon glyphicon-cog" aria-hidden="true")
				|  Bearbeiten
	
	div(class="panel panel-default")
		div(class="panel-heading") Infos
		div(class="panel-body")
			form(role='form' method="post" class="form-horizontal")
				+inputDefault("name", verein ? verein.name : "", "Name")
				+inputDisabled(verein ? verein._id : "", "ID")
				input(type="submit" class="btn btn-primary pull-right")
			a(href="../delete/" + verein._id class="btn btn-danger pull-left") Löschen
