extends ../index.jade

block title
	| #{rwk.name}

block main
	h1
		block title
		
	ul(class="nav nav-tabs")
		li(class="")
			a(href="../")
				span(class="glyphicon glyphicon glyphicon-eye-open" aria-hidden="true")
				|  Übersicht
		li(class="active")
			a
				span(class="glyphicon glyphicon glyphicon-cog" aria-hidden="true")
				|  Bearbeiten
	
	form(role='form' method="post" class="form-horizontal")
		div(class="panel panel-primary")
			div(class="panel-heading") Infos
			div(class="panel-body")
				+inputDefault("name", rwk ? rwk.name : "", "Name")
				
				- var optionHeim = []
				- manschaften.forEach(function(manschaft){ optionHeim.push({ id: manschaft.id, title: manschaft.verein+" "+manschaft.name+" ("+manschaft.saison+" "+manschaft.disziplin+")" }) })
				+inputSelect("manschaftID_Heim", optionHeim, rwk ? rwk.manschaftID_Heim : "", "Manschaft (Heim)")
				
				- var optionGast = []
				- manschaften.forEach(function(manschaft){ optionGast.push({ id: manschaft.id, title: manschaft.verein+" "+manschaft.name+" ("+manschaft.saison+" "+manschaft.disziplin+")" }) })
				+inputSelect("manschaftID_Gast", optionGast, rwk ? rwk.manschaftID_Gast : "", "Manschaft (Gast)")
				
				+inputTextArea("note", rwk ? rwk.note : "", "Notiz")
				
				//- Datum
				
		input(type="submit" class="btn btn-primary pull-right col-xs-2")
		a(href="../delete/" + rwk._id class="btn btn-danger pull-left col-xs-2")
			span(class="glyphicon glyphicon glyphicon-trash" aria-hidden="true")
			|  Löschen
