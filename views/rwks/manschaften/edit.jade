extends ../index.jade

block title
	| #{manschaft.name}

block main
	h1
		block title
		
	ul(class="nav nav-tabs")
		li(class="")
			a(href="../")
				span(class="glyphicon glyphicon glyphicon-eye-open" aria-hidden="true")
				|  Übersicht
		li(class="active")
			a
				span(class="glyphicon glyphicon glyphicon-cog" aria-hidden="true")
				|  Bearbeiten
	
	form(role='form' method="post" class="form-horizontal")
		div(class="panel panel-primary")
			div(class="panel-heading") Infos
			div(class="panel-body")
				+inputDefault("name", manschaft ? manschaft.name : "", "Name")
				
				- var optionVerein = []
				- vereine.forEach(function(verein){ optionVerein.push({id: verein._id, title: verein.name}) })
				+inputSelect("vereinID", optionVerein, manschaft ? manschaft.vereinID : "", "Verein")
				
				+inputTextArea("note", manschaft ? manschaft.note : "", "Notiz")
				
		input(type="submit" class="btn btn-primary pull-right col-xs-2")
		a(href="../delete/" + manschaft._id class="btn btn-danger pull-left col-xs-2")
			span(class="glyphicon glyphicon glyphicon-trash" aria-hidden="true")
			|  Löschen
