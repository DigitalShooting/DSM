extends ../index.jade

mixin form()
	form(role='form' method="post")
		+inputDefault("name", scheibe ? scheibe.name : "", "Name")
		
		input(type="submit" class="btn btn-primary pull-right")

block title
	| Scheiben

block main
	h1
		block title
	table(class="table" id="example")
		tr
			th ID
			th Name
			th Bearbeiten
		- scheiben.forEach(function(scheibe){
			tr
				td ##{scheibe.id}
				td #{scheibe.name}
				td
					a(href="./edit/" + scheibe.id) Bearbeiten
		- })
	a(href="./edit/new") Neu
